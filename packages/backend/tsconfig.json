{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "#*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
